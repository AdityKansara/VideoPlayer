<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/bg_popup_dark"
    android:clickable="true"
    tools:ignore="KeyboardInaccessibleWidget">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/bt_popupVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/popUpVideoToFitFullscreen"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_small_text_size"
            android:visibility="gone"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:thumb="@drawable/selector_switch_thumb"
            app:track="@drawable/selector_switch_track" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/bt_stretchVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/stretchVideoToFitFullscreen"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_small_text_size"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:thumb="@drawable/selector_switch_thumb"
            app:track="@drawable/selector_switch_track" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/bt_loopSingleVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="@string/singleVideoLoopPlayback"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_small_text_size"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:thumb="@drawable/selector_switch_thumb"
            app:track="@drawable/selector_switch_track" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/bt_pureAudioPlayback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/pureAudioPlayback"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_small_text_size"
            android:layout_marginBottom="20dp"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:thumb="@drawable/selector_switch_thumb"
            app:track="@drawable/selector_switch_track" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/text_timedOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/timedOff"
                android:textColor="@android:color/white"
                android:textSize="@dimen/widget_small_text_size" />

            <TextView
                android:id="@+id/text_whenThisEpisodeEnds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_timedOff"
                android:layout_toEndOf="@id/text_timedOff"
                android:text="@string/whenThisEpisodeEnds"
                android:textColor="@color/color_selector_white_color_accent"
                android:textSize="@dimen/widget_small_text_size" />

            <TextView
                android:id="@+id/text_30Minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_timedOff"
                android:layout_toEndOf="@id/text_timedOff"
                android:layout_below="@id/text_whenThisEpisodeEnds"
                android:layout_marginTop="5dp"
                android:text="@string/_30Minutes"
                android:textColor="@color/color_selector_white_color_accent"
                android:textSize="@dimen/widget_small_text_size" />

            <TextView
                android:id="@+id/text_anHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_timedOff"
                android:layout_toEndOf="@id/text_timedOff"
                android:layout_below="@id/text_30Minutes"
                android:layout_marginTop="5dp"
                android:text="@string/anHour"
                android:textColor="@color/color_selector_white_color_accent"
                android:textSize="@dimen/widget_small_text_size" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
